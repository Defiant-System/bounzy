<MenuBar>
	<Menu name="Bounzy">
		<Menu name="About Bounzy" shell="win -a"/>
		<Menu type="divider"/>
		<Menu name="Quit Bounzy" shell="win -c"/>
	</Menu>
	<Menu name="Game" for="game-content">
		<Menu name="Show&#8230;">
			<Menu name="Start" click="show-view" arg="start"/>
			<Menu name="Game" click="show-view" arg="game"/>
		</Menu>
		<Menu name="Debug Mode">
			<Menu name="0" check-group="debug" click="set-debug-mode" arg="0" is-checked="1"/>
			<Menu name="1" check-group="debug" click="set-debug-mode" arg="1"/>
			<Menu name="2" check-group="debug" click="set-debug-mode" arg="2"/>
		</Menu>
	</Menu>
	<Menu name="Help">
		<Menu name="Help" click="open-help"/>
		<Menu type="divider"/>
		<Menu name="License" shell="win -al"/>
	</Menu>
</MenuBar>